{
  "name": "raml-language-server",
  "version": "0.0.1",
  "description": "RAML Language Server based on the Language Server Protocol",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "compile": "installServerIntoExtension ../api-workbench-vscode/client ./package.json ./tsconfig.json && tsc -p .",
    "watch": "installServerIntoExtension ../api-workbench-vscode/client ./package.json ./tsconfig.json && tsc --watch -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raml-org/raml-language-server.git"
  },
  "keywords": [
    "raml"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/raml-org/raml-language-server/issues"
  },
  "homepage": "https://github.com/raml-org/raml-language-server#readme",
  "typings": "./dist/index.d.ts",
  "dependencies": {
    "raml-1-parser": "1.1.8",
    "raml-outline":"0.0.1",
    "raml-suggestions": "0.0.24",
    "raml-actions" : "0.0.11",
    "shortid": "^2.2.6",
    "vscode-languageserver": "^3.0.4",
    "promise-polyfill": "^5.1.0",
    "urijs": "^1.18.7"
  },
  "devDependencies": {
    "@types/node": "^6.0.52",
    "typings": "^0.5.1",
    "typescript": "^2.1.5",
    "dev-env-installer": "0.0.5",
    "rimraf": "*"
  },
  "engines": {
    "node": "*",
    "vscode": "*"
  }
}
