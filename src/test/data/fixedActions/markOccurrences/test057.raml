#%RAML 1.0
title: Example API
version: 1
types:
  Person:
    type: object
    properties:
      firstname: string
      lastname:  string
      title?:    string
  Pho*ne:
    pattern: ^[0-9()-]+$
  Manager:
    type: Person
    properties:
      reports: Person[]
      phone:  Pho!ne
  Admin:
    type: Person
    properties:
      clearanceLevel:
        enum: [ low, high ]
  AlertableAdmin:
    type: Admin
    properties:
      phone: Pho!ne
  Alertable: Manager | AlertableAdmin
  Org:
    type: object
    properties:
      onCall: AlertableAdmin
  