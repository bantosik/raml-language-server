  scheduleSearch:
    queryParameters: !include queryParams/resources/scheduleParams.yaml
  slotSearch:
    queryParameters: !include queryParams/resources/slotParams.yaml
  conditionalOperation:
    queryParameters: !include queryParams/resourceParams.yaml
  conformance:
    responses:
      200:
        body:
          application/json:
            type: resources.Conformance
          application/xml:
            type: resources.Conformance
  create:
    responses:
      201:
        description: Created
        headers:
          Location:
            example: http://xxx/Condidition/123/_history/1
          Last-Modified: datetime
          ETag:
            example: '1.0'
  delete:
    responses:
      204:
        description: Deleted
  history:
    queryParameters:
      _count:
        required: false
      _since:
        required: false
    responses:
      200:
        body:
          application/json:
            type: bundles.Bundle
  read:
    queryParameters:
      _format:
        required: false
        enum: [application/json, application/xml]
      _summary:
        required: false
        enum: ['true', 'false', text, data]
    headers:
      If-Modified-Since:
        type: string
        required: false
      If-None-Match:
        required: false
    responses:
      304:
        description: Not Modified
  search:
    queryParameters: !include queryParams/searchParams.yaml
  update:
    responses:
      200:
        description: Updated
      201:
        description: Created
        headers:
          Location:
            example: http://xxx/condidition/123/_history/1
          Last-Modified: datetime
          ETag:
            example: '1.0'
      422:
        description: |
          Unprocessable Entity - the proposed resource violated applicable FHIR profiles or server business rules
  vread:
    queryParameters:
      _format:
        required: false
        enum: [application/json, application/xml]
    responses:
      200:
        headers:
          ETag:
          Last-Modified: string
        body:
          application/json:
            type: resources.Resource
